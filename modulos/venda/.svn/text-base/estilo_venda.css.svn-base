body {
    margin-left: 0px;
    margin-top: 0px;
    margin-right: 0px;
    margin-bottom: 0px;
}
body div.qtip div.content{
   padding: 0;
   margin: 0;
   height: auto; min-height: auto;
   width: auto; min-width: auto;
}
legend{
    font-weight:bold;
    font-size:14px;
}
.dicn{display:inline-block; padding:10px; width:160px; height:160px; border:1px solid #eee; text-align:center; margin:20px; text-decoration:none;}
.dicn:hover{border:1px solid #999; background:#eee}
.dicn p{padding:10px 0 0; margin:0; color:#000; font-weight:bold; display:block;}
.dicn span{color:#F00;}
.dicn img{border:none;}

.dicn_medium{display:inline-block; padding:15px; width:75px; height:90px; border:1px solid #eee; text-align:center; margin:20px; text-decoration:none;}
.dicn_medium:hover{border:1px solid #999; background:#eee;}
.dicn_medium p{padding:10px 0 0; margin:0;color:#000; font-weight:bold; display:block; padding:5px 0;}
.dicn_medium img{border:none;}

.venda_texto_grande_negrito{
    font-size:16px;
    font-weight: bold;
}

#conteudo-ajax {
    display:none;
    width:600px;
    max-height:400px;
    overflow:auto;
    border:4px dotted #CCC;
    padding:10px 20px;
    background:#eee;
    position:absolute;
    top:100px;
    left:154px;
    z-index:9999;
}
#conteudo-ajax h2 {
    background:#393;
    font-size:1em;
}
#conteudo-ajax  h3 {
    font-size:1em;
}
#conteudo-ajax  .fechar {
    display:block;
    text-align:right;
    font-size:0.9em;
    font-weight:bold;
    color:#080;
    cursor:pointer;
}
#mask {
    position:absolute;
    left:0;
    top:0;
    z-index:9000;
    background-color:#999;
    display:none;
}
#btn_salvar{
    width:216px;
    height:64px;
    background:url(../btn_adicionar_os_itens.jpg) no-repeat;
    cursor:pointer;
}
.tr_1{
    background-color:#E9E9E9;
}
.tr_over{
    background-color:#DAE8F4;
}
.firstborder {
    border-bottom:solid 1px #B6D2EC;
    border-right:solid 1px #B6D2EC;
}
.borda {
    border-bottom:solid 1px #B6D2EC;
    border-right:solid 1px #B6D2EC;
}
.bordavazia {
    border-bottom:solid 1px #B6D2EC;
    border-right:solid 1px #B6D2EC;
    border-left:solid 1px #B6D2EC;
    color: #FFF;
}
.btn {
    display: block;
    position: relative;
    background: #000;
    padding: 5px;
    float: center;
    color: #FFF;
    text-decoration: none;
    cursor: pointer;
}
.btn.blue { background: #2ae; }
.btn.blue { border-color: #000;}

