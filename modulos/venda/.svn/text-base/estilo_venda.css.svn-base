#modal_mask_loading{
    background: #000 url('img/ajax_loading_bar.gif') no-repeat center;
    position: fixed;
    z-index:999999;
    top: 0px;
    left: 0px;
    height:100%;
    width:100%;
    display: none;
    opacity: 0.5;
}